@page
@model IndexModel
@using Entities
@{
    ViewData["Title"] = "Recipe Manager";
}

<h1>Recipe Manager</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Ingredients</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Recipe recipe in Model.Recipes)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => recipe.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => recipe.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => recipe.NumberOfIngredients)
            </td>
        </tr>
        }
    </tbody>
</table>